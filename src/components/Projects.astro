        icon:Colab
    },
    FLASK: {
        name:"Flask",
        class:"rounded-full bg-gray-700 text-white size-7 p-1.5",
        icon:Flask
    },
    PYTHON: {
        name:"Python",
        class:"rounded-full bg-gray-700 text-white size-7 p-1.5",
        icon:Python
    },
    PG: {
        name:"PostgreSQL",
        class:"rounded-full bg-gray-700 text-white size-7 p-1.5",
        icon:Postgresql
    },
    DISCORD: {
        name:"Discord",
        class:"rounded-full bg-gray-700 text-white size-7 p-1.5",
        icon:Discord
    },
    GITLAB: {
        name:"GitLab",
        class:"rounded-full bg-gray-700 text-white size-7 p-1.5",
        icon:Gitlab
    },
    NEST: {
        name:"NextJS",
        class:"rounded-full bg-gray-700 text-white size-7 p-1.5",
        icon:Nestjs
    },
