---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Github from "../components/icons/Github.astro";
import Socialpill from "../components/Socialpill.astro";
import Mail from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Codeicon from "../components/icons/Codeicon.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Nicolas Addamo.">
  <main>
    <SectionContainer class="py-44 pb-24">
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex justify-center flex-row gap-x-4 pb-4"
      >
        Hi, I'm Nicolas Addamo
        <div class="flex justify-center items-center">
          <a
            href="https://www.linkedin.com/in/nicolasaddamo1/"
            target="_blank"
            rel="noopener"
            class="flex justify-center items-center"
            z-index="1"
          >
            <Badge>Open to work</Badge>
          </a>
        </div>
      </h1>
      <h2 class="text-xl md:text-2xl lg:text-2xl text-wrap pl-12 max-w-[700px]">
        <span>+3 year of experience. </span>
        <span class="text-blue-200/90">FullStack Developer.</span>
        <span class="text-blue-200/90"> Entrepreneur ðŸš€. </span>
        <span class="opacity-55">
          From Hurlingham, Buenos Aires, Argentina.
        </span>
      </h2>
      <nav class="flex gap-4 mt-4 pl-12 flex-wrap">
        <Socialpill href="https://www.linkedin.com/in/nicolasaddamo1/">
          <Linkedin />
          Linkedin
        </Socialpill>

        <Socialpill href="https://github.com/nicolasaddamo1">
          <Github />
          Github
        </Socialpill>
        <Socialpill href="mailto:nicolasaddamo1@gmail.com">
          <Mail />
          nicolasaddamo1@gmail.com
        </Socialpill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experience" class="pl-12">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
        <Briefcase />
        Job Experience
      </h2>
      <Experience />
    </SectionContainer>
  </main>
  <SectionContainer id="projects" class="pl-12">
    <h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
      <Codeicon />
      Projects
    </h2>
    <Projects />
  </SectionContainer>
</Layout>
